# ‚úÖ NEW FUNCTION: Get specific receipt data by transaction_id
def get_receipt_by_transaction_id(transaction_id):
    """Get receipt data by transaction_id"""
    try:
        conn = psycopg2.connect(**DATABASE_CONFIG)
        cur = conn.cursor()
        
        cur.execute('''
            SELECT id, transaction_id, amount, datetime, person_name, upi_id, status
            FROM extracted_receipts
            WHERE transaction_id = %s
            ORDER BY created_at DESC
            LIMIT 1;
        ''', (transaction_id,))
        
        row = cur.fetchone()
        cur.close()
        conn.close()
        
        if row:
            return {
                'id': row[0],
                'transaction_id': row[1],
                'amount': row[2],
                'datetime': row[3],
                'person_name': row[4],
                'upi_id': row[5],
                'status': row[6]
            }
        else:
            return None
            
    except Exception as e:
        logging.error(f"‚ùå Failed to get receipt by transaction_id {transaction_id}: {e}")
        return None

# User Management Functions
def register_user(username, email, password, esignature):
    """Register a new user"""
    try:
        conn = psycopg2.connect(**DATABASE_CONFIG)
        cur = conn.cursor()
        
        cur.execute('''
            INSERT INTO users (username, email, password, esignature)
            VALUES (%s, %s, %s, %s)
            RETURNING id;
        ''', (username, email, password, esignature))
        
        user_id = cur.fetchone()[0]
        conn.commit()
        cur.close()
        conn.close()
        
        logging.info(f"‚úÖ User {username} registered successfully with ID: {user_id}")
        return user_id
        
    except Exception as e:
        logging.error(f"‚ùå Failed to register user {username}: {e}")
        return None

def register_user_with_signature(username, email, password, esignature, signature_image_data=None):
    """Register a new user with optional signature image"""
    try:
        conn = psycopg2.connect(**DATABASE_CONFIG)
        cur = conn.cursor()
        
        if signature_image_data:
            # Insert with signature image
            cur.execute('''
                INSERT INTO users (username, email, password, esignature, signature_image)
                VALUES (%s, %s, %s, %s, %s)
                RETURNING id;
            ''', (username, email, password, esignature, signature_image_data))
        else:
            # Insert without signature image
            cur.execute('''
                INSERT INTO users (username, email, password, esignature)
                VALUES (%s, %s, %s, %s)
                RETURNING id;
            ''', (username, email, password, esignature))
        
        user_id = cur.fetchone()[0]
        conn.commit()
        cur.close()
        conn.close()
        
        logging.info(f"‚úÖ User {username} registered successfully with ID: {user_id}")
        return user_id
        
    except Exception as e:
        logging.error(f"‚ùå Failed to register user {username}: {e}")
        return None

